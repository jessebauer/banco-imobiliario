{
  "name": "banco-imobiliario",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "server",
    "client",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace client",
    "server": "npm run dev --workspace server",
    "dev:all": "concurrently -n client,server -c blue,green \"npm:dev --workspace client\" \"npm:dev --workspace server\"",
    "start": "npm run dev:all",
    "test": "npm run test --workspace server",
    "build": "npm run build --workspace client && npm run build --workspace server"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "typescript": "^5.3.3"
  }
}
